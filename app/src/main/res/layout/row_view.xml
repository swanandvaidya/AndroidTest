<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="@dimen/padding_or_margin_8_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_or_margin_8_dp"
            android:textSize="@dimen/primary_tv_size"
            android:layout_marginTop="@dimen/padding_or_margin_8_dp"
           />

        <TextView
            android:id="@+id/tv_product_sub_dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_desc"
            android:layout_marginLeft="@dimen/padding_or_margin_8_dp"
            android:layout_marginTop="@dimen/padding_or_margin_8_dp"
            android:textSize="@dimen/secondary_tv_size"
            />

        <TextView
            android:id="@+id/tv_product_barcode_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_sub_dept"
            android:layout_marginTop="@dimen/padding_or_margin_8_dp"
            android:layout_marginLeft="@dimen/padding_or_margin_8_dp"
            android:layout_marginBottom="@dimen/padding_or_margin_8_dp"
            android:textSize="@dimen/secondary_tv_size"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>